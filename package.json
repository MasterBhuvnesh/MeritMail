{
  "name": "meritmail",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "description": "A desktop application for managing your emails with ease and efficiency.",
  "license": "MIT",
  "author": "Bhuvnesh Verma",
  "scripts": {
    "dev": "vite",
    "build-web": "vite build",
    "build-electron": "tsc -b",
    "build": "npm run build-electron && npm run build-web",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --publish never",
    "format": "prettier --write ./src",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "discord-rpc": "^4.0.1",
    "lucide-react": "^0.546.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/discord-rpc": "^4.0.9",
    "@types/node": "^24.8.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "build": {
    "appId": "com.gdgrbu.meritmail",
    "productName": "MeritMail",
    "directories": {
      "buildResources": "electron/buildResources",
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "dist-electron/**/*",
      "public/**/*",
      "electron/buildResources/**/*",
      "package.json"
    ],
    "win": {
      "icon": "electron/buildResources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "icon": "electron/buildResources/icon.icns",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-Mac-${version}-Installer.${ext}"
    },
    "linux": {
      "icon": "electron/buildResources/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-Linux-${version}.${ext}"
    }
  }
}
